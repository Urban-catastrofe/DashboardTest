@inherits DashboardTest.Layouts.MainLayoutComponent

@using Radzen
@using Radzen.Blazor
@using DashboardTest.Models.JmullinkProject4
@using DashboardTest.Pages
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
  <ChildContent>
    <RadzenHeader>
      <ChildContent>
        <div class="row justify-content-start align-items-center">
          <div class="col-md-6 d-flex align-items-center" style="padding-left: 30px">
            <RadzenLabel Text="DashboardTEST">
            </RadzenLabel>
            <RadzenMenu style=@($"height: 50px;flex: auto")>
              <ChildContent>
                <RadzenMenuItem Text="Dashboard" Path="dashboard">
                </RadzenMenuItem>
                <RadzenMenuItem Text="Geluidssensor 3" Path="geluidssensor-3">
                </RadzenMenuItem>
                <RadzenMenuItem Text="Geluidssensor 2" Path="geluidssensor-2">
                </RadzenMenuItem>
                <RadzenMenuItem Text="Geluidssensor 1" Path="geluidssensor-1">
                </RadzenMenuItem>
              </ChildContent>
            </RadzenMenu>
          </div>
        </div>
      </ChildContent>
    </RadzenHeader>
    <RadzenBody @ref="body0" style="margin-left: 0px; margin-top: 58px">
      <ChildContent>
        <RadzenContentContainer Name="main">
        @Body
        </RadzenContentContainer>
      </ChildContent>
    </RadzenBody>
    <RadzenFooter>
      <ChildContent>
        <RadzenLabel Text="DashboardTEST, Copyright Ⓒ 2022">
        </RadzenLabel>
      </ChildContent>
    </RadzenFooter>
  </ChildContent>
</RadzenLayout>
